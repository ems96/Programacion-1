#include "stdafx.h"				//Libreria: Asignacion de librerias//
#include "conio.h"				//Libreria: Permite la utilizacion de getch()//
#include <iostream>				//Libreria:  

using namespace std;			//Permite que el teclado sea asignado para ingresar datos, y el monitor para salir (mostrar)// 

void main()
{
   float area,base,altura;		// Declaracion de las variables//
   cout<<"Ingrese base: ";		// Pide al usuario que introduzca el valor de la primer variable independiente//
   cin>>base;					// Lectura de variables//
   cout<<"Ingrese altura: ";	// Pide al usuario que introduzca el valor de la segunda variable independiente//
   cin>>altura;					// Lectura de variables//
   area = (base*altura)/2;		// Calculo en conjunto de las variables//
   cout<<"El area es: "<<area;	// Muestra el resultado//
   getch();						// Permite salir presionando cualquier tecla//
}
