void cargar (int vec[], int n, float x)
{
int j, fac=1;
vec[0]=2;
j=0;
	for(int i=1; i<=n; i=i++)
	{
		vec[1]= pow(x,i)/fac;
		fac=fac*()
	}

return j;
}



void mostrar(int vec[], int n)
{
for(int i=0; i<n; i++)
	cout<<"vec["<<i<<"]= "<<vec [i]<<endl;
}



void sumar (int vec [], int n, float &acum)
{
for(int i=0;i<n;i++)
	acum = acum + vec[i];
}

